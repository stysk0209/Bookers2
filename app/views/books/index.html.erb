<div class="container">
	<div class="row">

		<%= render 'layouts/sidebar', user: @user, book: @book_new %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= attachment_image_tag book.user, :image, :fill, 40, 40, class: " pull-left ", fallback: "no_image.jpg", size: "40x40" %>
							</td>
							<td>
								<%= link_to book.book_title, book_path(book) %>
							</td>
							<td>
								<%= book.book_body %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>