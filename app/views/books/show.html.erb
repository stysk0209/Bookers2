<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class="container">
	<div class="row">

		<%= render 'layouts/sidebar', user: current_user, book: @book_new %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
				<thead>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
								<p><%= @user.name %></p>
							<% end %>
						</td>
						<td>
							<%= link_to @book.book_title, book_path(@book) %>
						</td>
						<td>
							<%= @book.book_body %>
						</td>
						<td>
							<%= link_to " Edit ", edit_book_path(@book),class: "btn btn-success btn-sm" %>
						</td>
						<td>
							<%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>