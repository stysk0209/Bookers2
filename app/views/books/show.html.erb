<div class="container">
	<div class="row">

	  <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>

		<%= render 'layouts/sidebar', user: @book.user, book: @book_new %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
				<thead>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@book.user), class: "user_#{@book.user.id}" do %>
								<%= attachment_image_tag @book.user, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
								<p><%= @book.user.name %></p>
							<% end %>
						</td>
						<td>
							<%= link_to @book.book_title, book_path(@book), class: "book_#{@book.id}" %>
						</td>
						<td>
							<%= @book.book_body %>
						</td>
						<% if @book.user == current_user %>
							<td>
								<%= link_to " Edit ", edit_book_path(@book),class: "btn btn-success btn-sm edit_book_#{@book.id}" %>
							</td>
							<td>
								<%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger btn-sm destroy_book_#{@book.id}" %>
							</td>
						<% end %>

					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>