<div class="container">
	<div class="row">

		<%= render 'layouts/sidebar', user: @user, book: @book_new %>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<th>image</th>
					<th>name</th>
					<th></th>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<%= attachment_image_tag user, :image, :fill, 100, 100, fallback: "no_image.jpg", size: "40x40" %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<td>
								<%= link_to "Show", user_path(user) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>