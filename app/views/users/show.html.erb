<div class="container">
	<div class="row">
		<% if flash[:notice] %>
     	  <div class="flash">
       	  	<%= flash[:notice] %>
          </div>
		<% end %>

<%= render 'layouts/sidebar', user: @user, book: @book_new %>


		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
				</thead>
				<tbody>
					<%if @books == nil || @books == [] %>

					<% else %>
						<% @books.each do |book| %>
							<tr>
								<td>
									<%= link_to user_path(@user) do %>
										<%= attachment_image_tag book.user, :image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40"%>
									<% end %>
								</td>
								<td>
									<%= link_to book.book_title, book_path(book) %>
								</td>
								<td>
									<%= book.book_body %>
								</td>
							</tr>
				 		<% end %>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>